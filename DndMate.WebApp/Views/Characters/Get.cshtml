@model DndMate.WebApp.ViewModels.CharacterViewModel
@{
    ViewBag.Title = "Get";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_GamespaceTools", Model.Gamespace)
<div class="gamespace-content">
    <div class="row">
        <div class="col-md-6">
            <h2>@Model.Character.Name</h2>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-4">@Model.Character.CharacterClass.ToString()</div>
                <div class="col-4">@Model.Character.Level Lvl.</div>
                <div class="col-4">Background</div>
            </div>
            <div class="row">
                <div class="col-4">Race</div>
                <div class="col-4">Alignment</div>
                <div class="col-4">Exp.</div>
            </div>
        </div>
    </div>
    <div class="row character-props">
        <div class="col-1 stat-table">
            <div class="stat">
                <p class="name">Strength</p>
                <h4 class="bonus">5</h4>
                <p class="value">18</p>
            </div>
            <div class="stat">
                <p class="name">Dexterity</p>
                <h4 class="bonus">5</h4>
                <p class="value">18</p>
            </div>
            <div class="stat">
                <p class="name">Constitution</p>
                <h4 class="bonus">5</h4>
                <p class="value">18</p>
            </div>
            <div class="stat">
                <p class="name">Intelligence</p>
                <h4 class="bonus">5</h4>
                <p class="value">18</p>
            </div>
            <div class="stat">
                <p class="name">Wisdom</p>
                <h4 class="bonus">5</h4>
                <p class="value">18</p>
            </div>
            <div class="stat">
                <p class="name">Charisma</p>
                <h4 class="bonus">5</h4>
                <p  class="value">18</p>
            </div>
        </div>
        <div class="col-3">
            <div class="row">
                <span>+</span>
                <span>Inspiration</span>
            </div>
            <div class="row">
                <span>+</span>
                <span>Inspiration</span>
            </div>
        </div>
    </div>
</div>

