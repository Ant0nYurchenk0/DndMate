@model DndMate.WebApp.ViewModels.SpellListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_GamespaceTools", Model.Gamespace)
<div class="gamespace-content">

    <h2>Spells</h2>
    <ul>
        @foreach (var spell in Model.Spells)
        {
            <li>
                <a href="@Url.Action("Get", "Spells", new {id = spell.Id})">@spell.Name</a>
                <a href="@Url.Action("Edit", "Spells", new {id = spell.Id})">Edit</a>
                <a href="@Url.Action("Delete", "Spells", new {id = spell.Id})">Delete</a>
            </li>
        }
    </ul>
</div>
