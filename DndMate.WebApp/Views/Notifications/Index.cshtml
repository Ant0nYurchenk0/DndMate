@model IEnumerable<DndMate.WebApp.Dtos.NotificationDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<div class="gamespace-content">
    <h2>Notifications</h2>
    <hr />

    @if (Model.Count() == 0)
    {
        <p class="text-muted">Nothing here.</p>
    }
    else
    {
        foreach (var notification in Model)
        {
            <div class="accordion" id="accordionExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#notification@(notification.Id)" aria-expanded="false" aria-controls="collapseOne">
                            Invite to @notification.GamespaceName
                        </button>
                    </h2>
                    <div id="notification@(notification.Id)" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample" style="">
                        <div class="accordion-body">
                            <p>@notification.Message</p>
                            <a class="btn btn-outline-success" href="@Url.Action("Accept", "Notifications", new { id= notification.Id})">Accept</a>
                            <a class="btn btn-outline-danger" href="@Url.Action("Deny", "Notifications", new { id= notification.Id})">Deny</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

</div>
